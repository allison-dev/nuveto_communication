{
    "name": "laravel/laravel",
    "type": "project",
    "description": "Sigma Ominichannel",
    "keywords": [
        "framework",
        "laravel"
    ],
    "license": "MIT",
    "require": {
        "php": "^7.3|^8.0",
        "ext-bcmath": "*",
        "ext-json": "*",
        "fideloper/proxy": "^4.2",
        "fruitcake/laravel-cors": "^2.0",
        "fzaninotto/faker": "^1.9",
        "guzzlehttp/guzzle": "^7.1",
        "jeroennoten/laravel-adminlte": "^3.5",
        "laracasts/flash": "^3.1",
        "laravel-notification-channels/facebook": "^0.2.1",
        "laravel/framework": "^8.0",
        "laravel/horizon": "^5.7",
        "laravel/passport": "^10.0",
        "laravel/telescope": "^4.3",
        "laravel/tinker": "^2.0",
        "laravel/ui": "^3.0",
        "laravellegends/pt-br-validator": "^8.0",
        "lucascudo/laravel-pt-br-localization": "^1.1",
        "nesbot/carbon": "^2.42",
        "predis/predis": "^1.1",
        "pusher/pusher-php-server": "^4.1",
        "snapappointments/bootstrap-select": "^1.13",
        "thujohn/twitter": "^2.3",
        "webklex/laravel-imap": "^2.4",
        "webklex/php-imap": "^2.5",
        "your-app-rocks/eloquent-uuid": "^2.4"
    },
    "require-dev": {
        "facade/ignition": "^2.3.6",
        "fzaninotto/faker": "^1.9.1",
        "mockery/mockery": "^1.3.1",
        "nunomaduro/collision": "^5.0",
        "phpunit/phpunit": "^9.3"
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true,
        "platform-check": false
    },
    "extra": {
        "laravel": {
            "dont-discover": []
        }
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/",
            "Database\\Factories\\": "database/factories/",
            "Database\\Seeders\\": "database/seeders/"
        },
        "files": [
            "app/Helpers/functions.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "scripts": {
        "post-autoload-dump": [
            "Illuminate\\Foundation\\ComposerScripts::postAutoloadDump",
            "@php artisan package:discover --ansi"
        ],
        "post-root-package-install": [
            "@php -r \"file_exists('.env') || copy('.env.example', '.env');\""
        ],
        "post-create-project-cmd": [
            "@php artisan key:generate --ansi"
        ],
        "post-install-cmd": [
            "chmod -R 777 storage",
            "@php artisan clear-compiled",
            "@php artisan passport:keys"
        ],
        "post-update-cmd": [
            "@php artisan horizon:publish --ansi",
            "@php artisan telescope:publish --ansi"
        ]
    }
}
